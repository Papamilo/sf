<!DOCTYPE html>
<html lang="{{ locale }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('vendor/bootstrap/css/bootstrap.css') }}"/>
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock stylesheets %}
    </head>
    <body>

        {% block nav %}
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('aston_front_homepage') }}">Symfony</a>
                    </div>
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href="{{ path('aston_front_homepage') }}">{{ 'app.menu.home'|trans }} <span class="sr-only">(current)</span></a></li>
                            <li><a href="#">{{ 'app.menu.about'|trans }}</a></li>
                            <li><a href="{{ path('aston_front_contact') }}">{{ 'app.menu.contact'|trans }}</a></li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        {% endblock nav %}

    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-8">
                {% block body %}{% endblock %}
            </div>
            <div class="col-sm-12 col-md-4">
                <h2>Right Column</h2>
            </div>
        </div>
    </div>

    {% block javascripts %}
        <script src="{{ asset('vendor/jquery/jquery.js') }}"></script>
        <script src="{{ asset('vendor/bootstrap/js/bootstrap.js') }}"></script>
    {% endblock %}
</body>
</html>
